<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">
            <TextView
                android:id="@+id/textView_latest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/trebuchet"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textView_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:fontFamily="@font/trebuchet"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.9"
            android:text="All"
            android:backgroundTint="#35a600"/>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="2.7"
            android:src="@drawable/settings"
            android:background="@null"
            android:layout_marginRight="10dp"
            />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="2.7"
            android:src="@drawable/img"
            android:background="@null"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_cwsi"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:id="@+id/linearLayout_cwsi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_cwsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crop Water Stress Index"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/textView_cwsi_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="60dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/textView_cwsi_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_soil"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:id="@+id/linearLayout_soil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_soil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelembapan Tanah"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/textView_soil_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="60dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/textView_soil_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_air"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_air"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suhu Udara"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView_air_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="50dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_canopy"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_canopy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suhu Kanopi / Daun"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView_canopy_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="50dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rh"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_rh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kelembapan Udara"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/textView_rh_value"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="60dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_weather"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perkiraan Cuaca"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    />

                <TextView
                    android:id="@+id/textView_weather_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/trebuchet"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/LineChartcwsi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />
    </LinearLayout>
</LinearLayout>